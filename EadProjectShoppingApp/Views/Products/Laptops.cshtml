
@{
    ViewBag.Title = "Laptops";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Laptops</h2>


<table class="table">
    <tr>
        <th>
            Product Name
        </th>

        <th>
            Product Price
        </th>

        <th>
            Product Description
        </th>

        <th>
            Product Image
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ProductName
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Description

            </td>
            <td>
                @Url.Content("~/Content/images/" + item.ProductImage)
            </td>


            <td>
                @Html.ActionLink("Add to cart", "AddToCart", new { id = item.ProductId })

            </td>
        </tr>
    }

</table>